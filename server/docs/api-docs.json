  "paths": {
    "/columns": {
      "post": {
        "tags": [
          "public"
        ],
        "summary": "Get the available columns for a supported dataset",
        "description": "",
        "operationId": "getColumns",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "The datasets table_name of which the columns should be returned",
            "required": true,
            "type": "object",
            "schema": {
              "example": {
                "dataset": "human_resources__core_dataset"
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "object",
              "properties": {
                "dataset": {
                  "type": "string"
                },
                "columns": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/Column"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Error on validating the request parameters",
            "schema": {
              "$ref": "#/definitions/ValidationError"
            }
          }
        }
      }
    },
    "/datasets": {
      "get": {
        "tags": [
          "public"
        ],
        "summary": "Find supported datasets",
        "description": "Get all datasets, that are defined on the server.",
        "operationId": "getDatasets",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "object",
              "properties": {
                "datasets": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/Dataset"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/examples": {
      "post": {
        "tags": [
          "public"
        ],
        "summary": "Get examples sentences for specified dataset",
        "description": "",
        "operationId": "getExamples",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "The datasets table_name of which the examples should be returned",
            "required": true,
            "type": "object",
            "schema": {
              "example": {
                "dataset": "human_resources__core_dataset"
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "object",
              "properties": {
                "dataset": {
                  "type": "string"
                },
                "examples": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/Example"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Error on validating the request parameters",
            "schema": {
              "$ref": "#/definitions/ValidationError"
            }
          }
        }
      }
    },
    "/nlp": {
      "post": {
        "tags": [
          "nlp"
        ],
        "summary": "Extract information from input to draw graph",
        "description": "Returns a chart type and the data in a format suitable for plotly API to draw a graph",
        "operationId": "nlp",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "type": "object",
            "schema": {
              "type": "object",
              "properties": {
                "input": {
                  "description": "Input sentence that should generate the graph",
                  "type": "string"
                },
                "dataset": {
                  "description": "The datasets table_name of which the columns should be returned",
                  "type": "string"
                }
              },
              "example": {
                "dataset": "human_resources__core_dataset",
                "input": "Plot histogram of employeeâ€™s age."
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "object",
              "properties": {
                "data": {
                  "type": "array",
                  "decription": "Complete dataformat for plotly to plot graphs",
                  "items": {
                    "type": "object"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Error on validating the request parameters",
            "schema": {
              "$ref": "#/definitions/ValidationError"
            }
          }
        }
      }
    }
  },
