    {
      "name": "nlp",
      "description": "Extracts information from input and returns transformed data for the plotly API",
      "externalDocs": {
        "description": "See",
        "url": "https://plot.ly/javascript/"
      }
    }
  ],
  "schemes": [
    "http",
    "https"
